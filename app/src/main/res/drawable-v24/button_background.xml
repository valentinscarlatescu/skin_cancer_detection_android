<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dip" />
            <gradient android:angle="-90" android:endColor="#2782be" android:startColor="#aad3ee" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dip" />
            <solid android:color="#2782be" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dip" />
            <gradient android:angle="-90" android:endColor="#1e6594" android:startColor="#80bde5" />
        </shape>
    </item>
</selector>