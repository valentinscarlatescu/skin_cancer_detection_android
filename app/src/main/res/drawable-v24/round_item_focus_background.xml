        <shape android:shape="oval">
            <gradient android:angle="-90" android:endColor="#404040" android:startColor="#A0A0A0" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="oval">
            <gradient android:angle="-90" android:endColor="#404040" android:startColor="#A0A0A0" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <gradient android:angle="-90" android:endColor="#808080" android:startColor="#D0D0D0" />
        </shape>
    </item>
</selector>