<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/socialProfilePhotoCardView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="60dp"
        app:cardPreventCornerOverlap="false">

        <ImageView
            android:id="@+id/socialProfilePhotoImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@drawable/item_placeholder_padding" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/socialProfileFirstNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rectangle_radius_background"
        android:padding="8dp"
        android:singleLine="true"
        android:textSize="@dimen/profile_text_size"
        tools:text="First name: Valentin" />

    <TextView
        android:id="@+id/socialProfileLastNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rectangle_radius_background"
        android:padding="8dp"
        android:singleLine="true"
        android:textSize="@dimen/profile_text_size"
        tools:text="Last name: Scarlatescu" />

    <TextView
        android:id="@+id/socialProfileGenderTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rectangle_radius_background"
        android:padding="8dp"
        android:singleLine="true"
        android:textSize="@dimen/profile_text_size"
        tools:text="Gender: MALE/FEMALE" />

    <TextView
        android:id="@+id/socialProfileJoinDateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rectangle_radius_background"
        android:padding="8dp"
        android:singleLine="true"
        android:textSize="@dimen/profile_text_size"
        tools:text="Join date: 05/10/2020" />

    <TextView
        android:id="@+id/socialProfileCartsNumberTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rectangle_radius_background"
        android:padding="8dp"
        android:singleLine="true"
        android:textSize="@dimen/profile_text_size"
        tools:text="Carts number: 23" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/socialProfileViewCartsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@android:color/white"
        android:src="@drawable/icon_cart"
        android:tint="@color/colorPrimary"
        app:fabCustomSize="@dimen/fab_size"
        app:maxImageSize="@dimen/fab_image_size" />

</LinearLayout>
